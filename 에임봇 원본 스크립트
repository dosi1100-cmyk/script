    game:GetService("TweenService"):Create(TypeDropFrame, TweenInfo.new(0.1), {Size = TypeDropdownOpen and UDim2.new(1, -40, 0, #types * 25) or UDim2.new(1, -40, 0, 0)}):Play() 
end)

local TargetDistDropBtn = Instance.new("TextButton", AimbotPage)
TargetDistDropBtn.Size = UDim2.new(1, -40, 0, 32); TargetDistDropBtn.Position = UDim2.new(0, 20, 0, 110); TargetDistDropBtn.BackgroundColor3 = Color3.fromRGB(50, 40, 75); TargetDistDropBtn.Text = "  Target Distance Check: " .. Settings.TargetDistanceCheck; TargetDistDropBtn.TextColor3 = Color3.new(1, 1, 1); TargetDistDropBtn.TextXAlignment = Enum.TextXAlignment.Left; TargetDistDropBtn.ZIndex = 5; Instance.new("UICorner", TargetDistDropBtn)
local TargetDistDropFrame = Instance.new("Frame", AimbotPage); TargetDistDropFrame.Size = UDim2.new(1, -40, 0, 0); TargetDistDropFrame.Position = UDim2.new(0, 20, 0, 145); TargetDistDropFrame.BackgroundColor3 = Color3.fromRGB(45, 35, 65); TargetDistDropFrame.ClipsDescendants = true; TargetDistDropFrame.ZIndex = 90; Instance.new("UICorner", TargetDistDropFrame)

TargetDistDropFrame.Active = true

